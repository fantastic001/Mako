def table_add_entry(name, data, **kw):
    introduce("Adding entry to table")
    tables = db.downloadTables()
    table = find_table_by_name(name, tables)
    if table != None:
        table.addEntry(data.split("|"))
        db.uploadTables(tables)
stack.pushCommand("add")
